#include <iostream>  
using namespace std;  
int main()  
{  
int n,sum=0,m;    
cout<<"Enter a number: ";    
cin>>n;    
while(n>0)    
{    
m=n%10;    
sum=sum+m;    
n=n/10;    
}    
cout<<"Sum is= "<<sum<<endl;    
return 0;  
}  

OUTPUT:
Enter a number: 53
Sum is= 8

--------------------------------
Process exited after 3.998 seconds with return value 0
